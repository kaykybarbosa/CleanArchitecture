@model CleanArchitecture.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<form asp-action="Edit">
    <h3>@ViewData["Title"]</h3>
    
    <hr />
    
    <div class="row">
        <input asp-for="Id" hidden/>

        <div class="col-2">
            <label asp-for="Name" class="control-label pt-2"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-2">
            <label asp-for="Description" class="control-label pt-2"></label>
        </div>
        <div class="col-10 pb-3">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-2">
            <label asp-for="Price" class="control-label pt-2"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-2">
            <label asp-for="Stock" class="control-label pt-2"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="col-2">
            <label asp-for="Image" class="control-label pt-2"></label>
        </div>
        <div class="col-10 pb-3">
            <textarea asp-for="Image" class="form-control"></textarea>
        </div>

        <div class="col-2">
            <label asp-for="CategoryId" class="control-label pt-2">Categories</label>
        </div>
        <div class="col-10 pb-3">
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div><br /></div>

        <div class="col-md-2">
            <input type="submit" value="Save" class="btn btn-success form-control" />
        </div>

        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
        </div>
    </div>
</form>