@model CleanArchitecture.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Register New Product";
}

<form asp-action="Create">
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        
        <hr />
        
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Stock" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Stock" class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Image" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Image" class="form-control"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="CategoryId" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryId" class="form-control"/>
            </div>

            <div>
                <br />
            </div>

            <div class="col-md-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            </div>

        </div>
    </div>
</form>