@model CleanArchitecture.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Delete Product";
    ViewData["SubTitle"] = "Are you sure to Delete?";
}

<form asp-action="Delete">
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <h4 class="text-danger">@ViewData["SubTitle"]</h4>

        <hr />

        <div class="row">
            <input asp-for="Id" hidden />

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled/>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" disabled></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="Stock" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Stock" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="Image" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Image" class="form-control" disabled></textarea>
            </div>

            <div class="col-2">
                <label asp-for="CategoryId" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control" disabled></select>
            </div>

            <div><br /></div>

            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            </div>

        </div>
    </div>
</form>