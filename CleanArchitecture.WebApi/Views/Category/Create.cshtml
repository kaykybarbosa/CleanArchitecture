@model CleanArchitecture.Application.DTOs.Requests.Category.CategoryRequest

@{
    ViewData["Title"] = "Register New Category";
}

<style>
    .model-lg{
        max-width: 80%;
    }
</style>




<form asp-action="Create">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        
        <hr />
        
        <div class="row">

           <div class="col-2">
               <label asp-for="Name" class="control-label pt-2"></label>
           </div>
           <div class="col-10 pb-3">
               <input asp-for="Name" class="form-control"/>
           </div>

           <div class="col-5 offset-2">
               <input type="submit" value="Create" class="btn btn-success form-control"/>
           </div>
           
           <div class="col-5">
               <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
           </div>
        </div>
    </div>
</form>

